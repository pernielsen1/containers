{
    "name": "middle", 
    "description": "The actual application connecting client and backend",
    "log_level": 20,
    "CommandPort": 8078,
    "filters"   : {
        "upper": {
            "module": "simple_filters",
            "class": "FilterUpper",
            "description": "makes string upper case"
        }
    },    

    "routers": {
        "router_client" : {
            "type": "listen",
            "socket_to_queue": "worker_to_backend",
            "queue_to_socket": "to_client",
            "host": "localhost",
            "port": 4242             
        },
        "router_backend": {
            "type": "connect",
            "socket_to_queue": "worker_to_client",
            "queue_to_socket": "to_backend",
            "host": "localhost",
            "port": 4243               
        }
    },
    "workers": {
        "worker_to_backend": {
            "in_queue": "worker_to_backend",
            "filter_name": "upper",
            "to_queue": "to_backend"
        },
        "worker_to_client": {
            "in_queue": "worker_to_client",
            "to_queue": "to_client"
        }
  
    }
}
