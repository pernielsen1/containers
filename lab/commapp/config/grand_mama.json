{
    "name": "grand_mama", 
    "description": "Starts all the test comm app backend, middle, client & crypto_server",
    "log_level": 20,
    "server" : "localhost",
    "command_debug": false,
    "command_port": 8075,
    "process_grand_mama_log_level": 10,
    "child_apps"   : {
        "crypto_server": {
            "config_file":"config/crypto_server.json",
            "description":"The crypto server working in request response HTTP mode",
            "restart_option":"kill_all"
        }, 
        "backend": {
            "config_file":"config/backend.json",
            "description":"The backend server",
            "restart_option":"kill_all"
        }, 
        "middle": {
            "config_file":"config/middle.json",
            "description":"The man in the middle server",
            "restart_option":"kill_all"
        }, 
        "client": {
            "config_file":"config/client.json",
            "description":"The client simulator",
            "restart_option":"kill_all"
        }
    }
} 